<div class="row justify-content-center">
  <div class="col-8">
    <%= simple_form_for(@listing) do |f| %>
      <div class="row">
        <div class="col-12">
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        </div>
      </div>

      <div class="form-inputs">
        <div class="row">
          <div class="col-12">
            <div class="mb-3">
              <%= f.input :title %>
            </div>
          </div>
          <div class="col-12">
            <div class="mb-3">
              <%= f.input :description %>
            </div>
          </div>
          <div class="col-6">
            <div class="mb-3">
              <%= f.input :rate_per_hour, input_html: { min: '1', step: 'any' } %>
            </div>
          </div>

          <h2 class="form-heading">Service Area</h2>
          <!-- Service Area -->
          <%= f.fields_for :service_areas do |service_areas_form| %>
            <div class="col-12">
            <%= service_areas_form.label :suburb_id %>
            <%= service_areas_form.text_field :suburb_id %>
            <% service_areas_form.hidden_field :listing_id, value: params[:id] %>
            </div>
          <% end %>
        
          <div class="col-12">
          <!-- Image upload for profile picture -->
          <%= f.label :image, "Upload Listing Picture", class: "mt-5" %> <br />
          <%= f.file_field :image, multiple: false, direct_upload: true, class: "mt-3" %>
          </div>
      </div>

      <div class="form-actions">
        <div class="row">
          <div class="col-2">
            <%= f.button :submit, "Create", class: "btn btn-submit" %>
          </div>
          <div class="col-2 mt-2">
            <%= link_to 'Back', listings_path %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
