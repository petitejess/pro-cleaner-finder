
<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :rate_per_hour, input_html: { min: '1', step: 'any' } %>

    <!-- Service Area -->
    <%= f.fields_for :service_areas do |service_areas_form| %>
      <%= service_areas_form.label :suburb_id %>
      <%= service_areas_form.text_field :suburb_id %>
      <% service_areas_form.hidden_field :listing_id, value: params[:id] %>
    <% end %>
    
    <!-- Image upload for profile picture -->
    <%= f.label :image, "Upload Listing Picture" %>
    <%= f.file_field :image, multiple: false, direct_upload: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
