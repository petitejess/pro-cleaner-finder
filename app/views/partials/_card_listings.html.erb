<% listings.each do |listing| %>  
  <div class="col-md-4">
    <div class="card-deck">
      <div class="card">
        <% if listing.image %>
          <%= image_tag listing.image, class: "card-img-top" %>
        <% else %>
          <%= image_tag "car.jpg", class: "card-img-top" %>
        <% end %>
        <h5 class="card-title">
            <%= listing.title %>
        </h5>
        <p class="card-text price">
          From $<%= listing.rate_per_hour %> / hr
        </p>
        <% if current_page?(root_path) %>
        <p class="card-text">
          <%= link_to "View", listing_path(listing.id), class: "btn btn-outline" %>
        </p>
        <% elsif current_page?(listings_path) %>
        <p class="card-text">
          <div class="row">
            <div class="col-4">
              <%= link_to "Show", listing, class: "btn btn-outline" %>
            </div>
            <div class="col-4">
              <%= link_to "Edit", edit_listing_path(listing), class: "btn btn-outline" %>
            </div>
            <div class="col-4 mt-2">
              <%= link_to "Delete", listing, method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
          </div>
        </p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>