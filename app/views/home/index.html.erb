<% content_for(:html_title) { 'Pro Cleaner Finder' } %>

<div class="container-fluid">
  <div id="navbarSupportedContent">
    <form id="search-listing-form" method="post" action="search_listing" class="d-flex search-bar">
      <input class="form-control me-2" type="search" placeholder="e.g., Sydney" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</div>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<div class="row">
  <% @listings.each do |listing| %>  
    <div class="col-md-4">
      <div class="card" style="width: 18rem; height: 15rem;">
        <% if listing.image %>
          <%= image_tag listing.image, class: "card-img-top" %>
        <% else %>
          <%= image_tag "car.jpg", class: "card-img-top" %>
        <% end %>
        <h5 class="card-title">
            <%= listing.title %>
        </h5>
        <p class="card-text">
          $<%= listing.rate_per_hour %>
        </p>
        <p class="card-text">
          <%= link_to "View", listing_path(listing.id), class: "btn btn-primary" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
