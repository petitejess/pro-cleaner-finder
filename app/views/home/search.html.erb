<% content_for(:html_title) { 'Pro Cleaner Finder' } %>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<div class="row">
  <% if !(@listings.empty?) %>
    <% @listings.each do |listing| %>  
      <div class="col-md-4">
        <div class="card" style="width: 18rem; height: 15rem;">
          <% if listing.image %>
            <%= image_tag listing.image, class: "card-img-top" %>
          <% else %>
            <%= image_tag "car.jpg", class: "card-img-top" %>
          <% end %>
          <h5 class="card-title">
              <%= listing.title %>
          </h5>
          <p class="card-text">
            $<%= listing.rate_per_hour %>
          </p>
          <p class="card-text">
            <%= link_to "View", listing_path(listing.id), class: "btn btn-primary" %>
          </p>
        </div>
      </div>
    <% end %>
  <% else %>
      <p>Not found. Enter other suburbs/postcodes, e.g., Melbourne/3000.</p>
  <% end %>
</div>
