<div class="home-search-bar">
  <%= form_with url: "/search", method: :get do |form| %>
    <div class="row justify-content-center">
      <div class="col-8">
        <%= form.text_field :query, class: "form-control" %>
      </div>
      <div class="col-4">
        <%= form.submit "Search", class: "btn btn-submit" %>
      </div>
    </div>
  <% end %>
</div>