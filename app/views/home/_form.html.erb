<div class="container home-search-bar">
  <%= form_with url: "/search", method: :get do |form| %>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <%= form.text_field :query, placeholder: "e.g., 'Sydney' or '2000'", class: "form-control" %>
        <%= form.submit "Search", class: "btn btn-submit" %>
      </div>
    </div>
  <% end %>
</div>
